{
  "manifest_version": 3,
  "name": "LazyWave",
  "version": "1.0",
  "description": "Control Spotify playback directly from your browser",
  "permissions": [
    "identity",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEAvxH5hOiRBXOg4I3mE7YG5TeuOqCXQQf5JTH5pK4ywxvKrHjYtHxJTxVEUeD8KGqruqDV/9N3HJtGbWQYZbXEVjpQtYHoUkP0KaIqKk+IMBZJdkOnJ+wGzGcKcZjvM9WoHXyoGz9GBjTDYDZhcEHr0xy9T9dpvH3HXsZqeEIo6QIDAQAB",
  "web_accessible_resources": [{
    "resources": ["wave.png"],
    "matches": ["<all_urls>"]
  }]
} 